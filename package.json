{
  "name": "foreverr-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "mobile": "pnpm --filter @foreverr/mobile",
    "ui": "pnpm --filter @foreverr/ui",
    "core": "pnpm --filter @foreverr/core",
    "config": "pnpm --filter @foreverr/config",
    "dev": "pnpm --filter @foreverr/mobile start",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "clean": "turbo run clean && rm -rf node_modules"
  },
  "devDependencies": {
    "turbo": "^2.3.0",
    "typescript": "~5.3.3"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "pnpm@9.15.0"
}
