{
  "expo": {
    "name": "Foreverr",
    "slug": "foreverr",
    "version": "0.1.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "foreverr",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#2D1B4E"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.exxit.foreverr",
      "infoPlist": {
        "NSCameraUsageDescription": "Foreverr needs camera access to take photos for memorials.",
        "NSPhotoLibraryUsageDescription": "Foreverr needs photo library access to upload memorial photos.",
        "NSMicrophoneUsageDescription": "Foreverr needs microphone access for voice messages."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#2D1B4E"
      },
      "package": "com.exxit.foreverr"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-secure-store",
      "expo-notifications",
      "expo-apple-authentication"
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
